{
	"version": "2.0.1",

	"dependencies": {
		"dotnet-test-xunit": "2.2.0-preview2-build1029",
		"Microsoft.Extensions.PlatformAbstractions": "1.0.0",
		"Microsoft.NETCore.Platforms": "1.0.1",
		"xunit": "2.2.0-beta2-build3300",
		"JavaScriptEngineSwitcher.ChakraCore": "2.0.0",
		"JavaScriptEngineSwitcher.Core": "2.0.0",
		"JavaScriptEngineSwitcher.Msie": "2.0.0",
		"JavaScriptEngineSwitcher.Jint": "2.0.0",
		"JavaScriptEngineSwitcher.Vroom": "2.0.1"
	},

	"buildOptions": {
		"warningsAsErrors": true,
		"emitEntryPoint": false,
		"embed": {
			"includeFiles": [ "Resources/cube.js", "Resources/power.js" ]
		}
	},

	"testRunner": "xunit",

	"frameworks": {
		"netcoreapp1.0": {
			"imports": [
				"dnxcore50",
				"portable-net451+win8"
			],
			"dependencies": {
				"Microsoft.NETCore.App": {
					"version": "1.0.1",
					"type": "platform"
				}
			},
			"buildOptions": {
				"compile": {
					"exclude": [ "Jurassic/**/*.*", "V8/**/*.*" ]
				}
			}
		},
		"net451": {
			"dependencies": {
				"JavaScriptEngineSwitcher.Jurassic": "2.0.0",
				"JavaScriptEngineSwitcher.V8": "2.0.0"
			},
			"frameworkAssemblies": {
				"System.Drawing": "4.0.0.0"
			},
			"buildOptions": {
				"compile": {
					"exclude": [ "Interop/Drawing/**/*.*" ]
				}
			}
		}
	}
}